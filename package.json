{
  "name": "@wojtekmaj/vite-compare-bundle-size",
  "version": "0.0.0",
  "description": "A GitHub action that outputs bundle size comparison tables for pull requests",
  "private": true,
  "type": "module",
  "main": "./lib/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "node -e \"fs.rmSync('./dist', { recursive: true, force: true }) && fs.rmSync('./lib', { recursive: true, force: true })\"",
    "format": "biome format",
    "lint": "biome lint",
    "package": "ncc build --source-map --license licenses.txt",
    "postinstall": "husky",
    "test": "yarn lint && yarn tsc && yarn format && yarn unit",
    "tsc": "tsc",
    "unit": "vitest"
  },
  "keywords": [
    "actions",
    "vite"
  ],
  "author": {
    "name": "Wojciech Maj",
    "email": "kontakt@wojtekmaj.pl"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@discoveryjs/json-ext": "^0.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/node": "*",
    "@vercel/ncc": "^0.38.1",
    "husky": "^9.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.3.3",
    "terser": "^5.31.3",
    "typescript": "^5.9.2",
    "vitest": "^4.0.1"
  },
  "packageManager": "yarn@4.10.3"
}
